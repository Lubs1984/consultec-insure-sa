# ============================================================
# InsureConsultec — Environment Variables
# Copy to .env and fill in real values. NEVER commit .env!
# ============================================================

# ── Server ──────────────────────────────────────────────────
NODE_ENV=development
API_PORT=3001
API_URL=http://localhost:3001
WEB_URL=http://localhost:5173

# ── Database (Railway PostgreSQL) ───────────────────────────
DATABASE_URL=postgresql://postgres:password@localhost:5432/insureconsultec
DIRECT_URL=postgresql://postgres:password@localhost:5432/insureconsultec

# ── Redis (Railway Redis) ────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Auth ─────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=change_me_min_32_chars_access_secret
JWT_REFRESH_SECRET=change_me_min_32_chars_refresh_secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ── Cloudflare R2 ─────────────────────────────────────────────
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=insureconsultec-documents-development
R2_PUBLIC_URL=https://your-r2-public-url.r2.dev

# ── SendGrid ─────────────────────────────────────────────────
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@insureconsultec.co.za
SENDGRID_FROM_NAME=InsureConsultec

# ── Africa's Talking (SMS) ───────────────────────────────────
AT_API_KEY=your_africas_talking_api_key
AT_USERNAME=sandbox
AT_SENDER_ID=InsureConsultec

# ── App ──────────────────────────────────────────────────────
APP_DOMAIN=insureconsultec.co.za
SUPER_ADMIN_EMAIL=admin@insureconsultec.co.za
